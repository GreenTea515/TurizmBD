<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Spravochnik">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="366dp"
        android:layout_height="619dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im1"
                android:layout_width="match_parent"
                android:onClick="opisanie"
                android:layout_height="200dp"
                android:src="@drawable/goroda" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Описание города"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/im2"
                android:layout_width="match_parent"
                android:onClick="inform"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/informashia" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Информация о городе"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/im3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="dostoprim"
                android:scaleType="fitXY"
                android:src="@drawable/dostoprimechatel" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Достопримечательности"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/im4"
                android:layout_width="match_parent"
                android:onClick="klimat"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/klimat" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Климат"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="114dp"
        android:layout_height="59dp"
        android:onClick="back2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

</androidx.constraintlayout.widget.ConstraintLayout>